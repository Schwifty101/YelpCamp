<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/stars.css">
    <div class="row">
        <div class="col-12 col-sm-6">
            <div class="card mb-3">
                <img src="<%= campground.image %>" alt="" class="card-img-top img-fluid w-100">
                <div class="card-body">
                    <h5 class="card.title d-flex justify-content-between align-items-center">
                        <%= campground.title %>
                            <small class="badge rounded-pill text-bg-light text-muted" style="font-size: 12px;">
                                <%= campground.author.username %>
                            </small>
                    </h5>

                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <ul class="list-group list-group-flush w-100">
                        <li class="list-group-item w-100">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </li>
                        <li class="list-group-item w-100">
                            $<%= campground.price %>/night
                        </li>
                    </ul>
                </ul>
                <% if(currentUser && campground.author.equals(currentUser._id)) {%>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush mt-auto">
                            <li class="list-group-item d-flex justify-content-between">
                                <a class="btn btn-secondary" href="/campgrounds">Back</a>
                                <div>
                                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"
                                        method="post">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                <% } else if(!currentUser) { %>
                    <ul class="list-group list-group-flush mt-auto">
                        <li class="list-group-item d-flex justify-content-between">
                            <a class="btn btn-secondary" href="/campgrounds">Back</a>
                            <div>
                                <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"
                                    method="post">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                <% } else { %>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush mt-auto">
                            <li class="list-group-item d-flex justify-content-between">
                                <a class="btn btn-secondary" href="/campgrounds">Back</a>
                            </li>
                        </ul>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="col-12 col-sm-6 p-0">
            <% if(currentUser) {%>
                <div class="container mb-3 p-0">
                    <h2 class="d-inline">Leave a review</h2>
                    <form action="/campgrounds/<%=campground._id%>/reviews" method="post" class="validated-form"
                        novalidate>
                        <div>
                            <fieldset class="starability-basic d-inline">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                                    aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="">
                            <label for="body" class="form-label">Review</label>
                            <textarea name="review[body]" id="body" class="mb-2 form-control" cols="30" rows="3"
                            required></textarea>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <button class="btn btn-sm btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            <% } %>
            <% for(let review of campground.reviews) { %>
                <div class="card mb-3">
                    <div class="card-header text-muted d-flex justify-content-between align-items-center">
                        <div>
                            <%= review.author.username %>
                        </div>
                        <div class="d-flex">
                            <p class="starability-result m-0" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= review.body %>
                        </p>
                        <% if(currentUser && review.author.equals(currentUser._id)) {%>
                            <form class="d-inline"
                                action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="post">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>